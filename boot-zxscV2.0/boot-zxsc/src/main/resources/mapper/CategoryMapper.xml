<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxsc.mapper.CategoryMapper">
    
    <resultMap id="CategoryMap" type="com.zxsc.entity.Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    
    <select id="findAll" resultMap="CategoryMap">
        SELECT * FROM category WHERE status = 1 ORDER BY sort ASC
    </select>
    
    <select id="findById" resultMap="CategoryMap">
        SELECT * FROM category WHERE id = #{id}
    </select>
    
    <insert id="insert" parameterType="com.zxsc.entity.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (name, sort, status) VALUES (#{name}, #{sort}, #{status})
    </insert>
    
    <update id="update" parameterType="com.zxsc.entity.Category">
        UPDATE category SET name = #{name}, sort = #{sort}, status = #{status} WHERE id = #{id}
    </update>
    
    <delete id="deleteById">
        DELETE FROM category WHERE id = #{id}
    </delete>
    
</mapper>
